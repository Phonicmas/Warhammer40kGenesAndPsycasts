<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- ========= Pink Horror Base ========= -->
    <ThingDef ParentName="BEWH_DaemonBase" Name="BEWH_PinkHorrorBase" Abstract="True">
        <label>pink horror</label>
        <description>Daemon of Tzeentch</description>
        <race>
            <deathActionWorkerClass>BEWH.DeathActionWorker_PinkHorror</deathActionWorkerClass>
        </race>
        <statBases>
            <MarketValue>150</MarketValue>
            <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
            <ArmorRating_Heat>1</ArmorRating_Heat>
            <MoveSpeed>5.5</MoveSpeed>
        </statBases>
        <tools>
            <li>
                <label>left claws</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>8.0</power>
                <cooldownTime>1</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            </li>
            <li>
                <label>right claws</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>8.0</power>
                <cooldownTime>1</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
            </li>
            <li>
                <label>teeth</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>15</power>
                <cooldownTime>1.4</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.5</chanceFactor>
                <soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
                <soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
            </li>
        </tools>
        <verbs>
            <li>
                <label>ranged</label>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>BEWH_PinkHorrorProjectileNoVPE</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>25.9</range>
                <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
                <burstShotCount>2</burstShotCount>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
    </ThingDef>


