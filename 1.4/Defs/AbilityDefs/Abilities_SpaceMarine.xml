  <!-- Remembrance -->

  <AbilityGroupDef>
    <defName>BEWH_OPA</defName>
    <cooldownTicks>240000</cooldownTicks>
  </AbilityGroupDef>

  <AbilityDef>
    <defName>BEWH_OmophageaCorpseEat</defName>
