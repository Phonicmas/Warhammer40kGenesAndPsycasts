<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Cultist Base -->

    <PawnKindDef Name="ChaosCultistBasePawn" Abstract="True">
        <race>Human</race>
        <defaultFactionType>BEWH_ChaosFactionHidden</defaultFactionType>
        <initialWillRange>5~50</initialWillRange>
        <initialResistanceRange>5~50</initialResistanceRange>
        <invNutrition>2.55</invNutrition>
        <backstoryCryptosleepCommonality>1.0</backstoryCryptosleepCommonality>
        <minGenerationAge>19</minGenerationAge>
        <maxGenerationAge>21</maxGenerationAge>
        <itemQuality>Normal</itemQuality>
        <ignoreIdeoApparelColors>true</ignoreIdeoApparelColors>
        <requiredWorkTags>Violent</requiredWorkTags>
        <backstoryFiltersOverride>
            <li>
                <categories>
                    <li>ImperialFighter</li>
                </categories>
            </li>
        </backstoryFiltersOverride>
        <useFactionXenotypes>false</useFactionXenotypes>
        <gearHealthRange>
            <min>0.6</min>
            <max>1</max>
        </gearHealthRange>
        <weaponMoney>200~1000</weaponMoney>
        <apparelMoney>
            <min>200</min>
            <max>1000</max>
        </apparelMoney>
        <apparelTags>
            <li>IndustrialBasic</li>
            <li>IndustrialAdvanced</li>
            <li>IndustrialMilitaryBasic</li>
            <li>IndustrialMilitaryAdvanced</li>
        </apparelTags>
        <apparelDisallowTags>
            <li>Western</li>
        </apparelDisallowTags>
        <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
        <disallowedTraits>
            <li>Brawler</li>
        </disallowedTraits>
        <specificApparelRequirements Inherit="False">
            <li>
                <bodyPartGroup>Torso</bodyPartGroup>
                <apparelLayer>OnSkin</apparelLayer>
                <stuff>Cloth</stuff>
            </li>
            <li>
                <bodyPartGroup>Legs</bodyPartGroup>
                <apparelLayer>OnSkin</apparelLayer>
                <stuff>Cloth</stuff>
            </li>
        </specificApparelRequirements>
        <inventoryOptions>
            <subOptionsChooseOne>
                <li>
                    <thingDef>MealSurvivalPack</thingDef>
                    <countRange>
                        <min>2</min>
                        <max>3</max>
                    </countRange>
                </li>
                <li>
                    <thingDef>MedicineIndustrial</thingDef>
                    <countRange>
                        <min>1</min>
                        <max>2</max>
                    </countRange>
                </li>
            </subOptionsChooseOne>
        </inventoryOptions>
        <skills>
            <li>
                <skill>Shooting</skill>
                <range>3~10</range>
            </li>
            <li>
                <skill>Melee</skill>
                <range>3~10</range>
            </li>
        </skills>
        <combatPower>40</combatPower>
    </PawnKindDef>

