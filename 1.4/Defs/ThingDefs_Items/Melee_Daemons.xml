        <graphicData>
            <texPath>Things/Weapons/DaemonetteClaw</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tools>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>10</power>
                <cooldownTime>0.6</cooldownTime>
                <armorPenetration>0.8</armorPenetration>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>10</power>
