<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Base Weapon -->
    <ThingDef Abstract="True" Name="CHDaemonWeaponBase" ParentName="BaseWeapon">
        <techLevel>Ultra</techLevel>
        <statBases>
            <MarketValue>2000</MarketValue>
            <Mass>4</Mass>
        </statBases>
        <burnableByRecipe>true</burnableByRecipe>
        <thingCategories>
            <li>WeaponsMelee</li>
        </thingCategories>
    </ThingDef>

    <!-- Hellblade -->

    <ThingDef ParentName="CHDaemonWeaponBase">
        <defName>BEWH_Hellblade</defName>
        <label>Hellblade</label>
        <description>Hellblade of a Bloodletter, enhanced by the powers of the warp.</description>
        <soundInteract>Interact_PlasmaSword</soundInteract>
        <meleeHitSound>MeleeHit_PlasmaSword</meleeHitSound>
        <equippedAngleOffset></equippedAngleOffset>
        <graphicData>
            <texPath>Things/Weapons/Hellblade</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tools>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>52</power>
                <cooldownTime>2.5</cooldownTime>
                <armorPenetration>0.75</armorPenetration>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>52</power>
                <cooldownTime>3</cooldownTime>
                <armorPenetration>0.75</armorPenetration>
            </li>
        </tools>
        <weaponTags>
            <li>Bloodletter</li>
        </weaponTags>
    </ThingDef>

    <!-- Daemonette Claw -->

    <ThingDef ParentName="CHDaemonWeaponBase">
        <defName>BEWH_DaemonetteClaw</defName>
