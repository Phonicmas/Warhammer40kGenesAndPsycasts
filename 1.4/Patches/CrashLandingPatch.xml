            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/HediffDef[defName = "BEWH_Melanochrome"]</xpath>
                    <value>
                        <makeImmuneTo>
                            <li>Rad</li>
                        </makeImmuneTo>
                        <hediffGiversCannotGive>
                            <li>Rad</li>
                        </hediffGiversCannotGive>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>